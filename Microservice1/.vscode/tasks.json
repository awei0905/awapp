{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/awapp.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/awapp.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/awapp.csproj"
            ],
            "problemMatcher": "$msCompile"
        }, 
        {
            "label": "dbcontext",
            "command": "dotnet",
            "type": "process",
            "args": [
                "ef",
                "dbcontext",
                "scaffold",
                "Name=ConnectionStrings:postgres",
                "Npgsql.EntityFrameworkCore.PostgreSQL",
                "-o",
                "Data",
                "-c",
                "ApplicationDbContext"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}